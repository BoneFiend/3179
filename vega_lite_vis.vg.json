{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Chinese Books by City Council in 2021",
  "width": 1000,
  "height": 600,
  "projection": {"type": "equirectangular"},

  "data": {
    "url": "https://raw.githubusercontent.com/BoneFiend/3179/main/LGA_POLYGON2.json",
    "format": {"type": "topojson", "feature": "vic_lga"}
  },
  "transform": [
    {
      "lookup": "properties.ABB_NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/BoneFiend/3179/main/chinese%20data.csv"
        },
          "key": "Council",
          "fields": ["Total"]
      },
      "as": "Chinese Books"
      
    }
  ],

  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "color": {
      "field": "Chinese Books",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.ABB_NAME", "type": "nominal", "title": "Local Council"},
      {"field": "Chinese Books", "type": "quantitative"}
    ]
  }
}