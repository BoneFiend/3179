{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": "LOTE Books by City Council",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/BoneFiend/3179/main/LGA_POLYGON.json",
    "format": {"type": "topojson", "feature": "LGA_POLYGON"}
    },
  "transform": [
    {
      "lookup": "properties.LGA_NAME",
      "from": {
        "data": {
        "url": "https://raw.githubusercontent.com/BoneFiend/3179/main/LOTE%20data.csv"
        },
        "key": "Council",
        "fields": ["Total"]
        
      }
      
    },
    {"filter": "datum.Language == 'Chinese'"}
      ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Active Cases",
      "type": "quantitative",
      "scale": {"type": "log"}
    }
  }
  
}